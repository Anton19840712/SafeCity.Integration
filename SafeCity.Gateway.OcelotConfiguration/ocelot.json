{
	"GlobalConfiguration": {
		"BaseUrl": "https://localhost:5003"
	},
	"Routes": [
		{
			//AUTH-POST:
			"UpstreamPathTemplate": "/gateway/auth",
			"UpstreamHttpMethod": [ "Post" ],
			"DownstreamPathTemplate": "/api/auth",
			"DownstreamScheme": "https",
			"DownstreamHostAndPorts": [
				{
					"Host": "localhost",
					"Port": 5004
				}
			]
		},
		{
			//GOVERNMENTS-GET:
			"UpstreamPathTemplate": "/gateway/governments",
			"UpstreamHttpMethod": [ "Get" ],
			"DownstreamPathTemplate": "/api/governments",
			"DownstreamScheme": "https",
			"DownstreamHostAndPorts": [
				{
					"Host": "localhost",
					"Port": 5002
				}
			],
			"FileCacheOptions": {
				"TtlSeconds": 10
			}
		},

		//PROCESSING-GET:
		{
			"UpstreamPathTemplate": "/gateway/processing112",
			"UpstreamHttpMethod": [ "Get" ],
			"DownstreamPathTemplate": "/api/processing112",
			"DownstreamScheme": "https",
			"DownstreamHostAndPorts": [
				{
					"Host": "localhost",
					"Port": 5001
				}
			],
			"AuthenticationOptions": {
				"AuthenticationProviderKey": "Bearer"
				"AllowedScopes": ["processing112.read"]
				,
				"RouteClaimsRequirment": {
					"Role": "Administrator"
				}
			},
			"RateLimitOptions": {
				"EnableRateLimiting": true,
				"Period": "10s",
				"PeriodTimespan": 10,
				"Limit": 3
			}
		},

		//PROCESSING-POST:
		{
			"UpstreamPathTemplate": "/gateway/processing112",
			"UpstreamHttpMethod": [ "Post" ],
			"DownstreamPathTemplate": "/api/processing112",
			"DownstreamScheme": "https",
			"DownstreamHostAndPorts": [
				{
					"Host": "localhost",
					"Port": 5001
				}
			]
		}
	]
}